@model IList<CategoryModel>
@using Nop.Core
@inject IWorkContext workContext

@if (Model.Count > 0)
{
    <div class="bs_home_page_category_grid">
        <div class="category-grid bs-home-page-category-grid">
            <div class="bs_category_home_main">
                <div class="item-grid bs_home_category_slider">
                    @foreach (var item in Model)
                    {
                        <div class="item-box">
                            <div class="category-item bs_home_category_item">
                                <div class="bs_categpory_pic">
                                    <div class="picture">
                                        <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                            <img alt="@item.PictureModel.AlternateText" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title" />
                                        </a>
                                    </div>
                                </div>
                                <h2 class="title">
                                    <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                        @item.Name
                                    </a>
                                </h2>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
<script asp-location="Footer">
    $('.bs_home_category_slider').slick({
      infinite: true,
        slidesToShow: 5,
        slidesToScroll: -1,
        rtl: @((await workContext.GetWorkingLanguageAsync()).Rtl.ToString().ToLower()),
        slidesToScroll: 1,
        responsive: [
            {
                breakpoint: 1381,
                settings: {
                    slidesToShow: 4,
                    slidesToScroll: -1,
                    slidesToScroll: 1
                }
            },
            {
                breakpoint: 1025,
                settings: {
                    slidesToShow: 3,
                    slidesToScroll: -1,
                    slidesToScroll: 1
                }
            },
            {
                breakpoint: 769,
                settings: {
                    slidesToShow: 2,
                    slidesToScroll: -1,
                    slidesToScroll: 1
                }
            },
            {
                breakpoint: 576,
                settings: {
                    slidesToShow: 1,
                    slidesToScroll: -1,
                    slidesToScroll: 1
                }
            }
            // You can unslick at a given breakpoint now by adding:
            // settings: "unslick"
            // instead of a settings object
        ]
    });
</script>